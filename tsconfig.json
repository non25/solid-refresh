{
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES2017",
    "declaration": true,
    "declarationDir": "src",
    "useDefineForClassFields": false,
    "declarationMap": true
  }
}